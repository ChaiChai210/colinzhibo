<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="4dp">

    <com.xuexiang.xui.widget.tabbar.TabControlView
        android:id="@+id/tab_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        app:tcv_defaultSelection="0"
        app:tcv_items="@array/option_publish"
        app:tcv_selectedColor="@color/text_color"
        app:tcv_selectedTextColor="@color/white"
        app:tcv_stretch="true"
        app:tcv_strokeWidth="1dp"
        app:tcv_textSize="13sp"
        app:tcv_unselectedColor="@color/colorPrimary"
        app:tcv_unselectedTextColor="@color/text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_title"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:hint="@string/hint_title"
            android:maxEms="20"
            android:maxLength="20"
            android:minEms="4"
            android:textColor="@color/colorContent"
            android:textColorHint="@color/colorTitle"
            android:textCursorDrawable="@color/text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/ic_circle_label_bg"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/half_circle_gray_button"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="10dp"
            android:text="@string/text_choose_circle"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:columnCount="3"
        android:visibility="gone" />
    <com.xuexiang.xui.widget.progress.CircleProgressView
        android:id="@+id/hpv_compress"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cpv_animate_type="AccelerateDecelerateInterpolator"
        app:cpv_circle_broken="false"
        app:cpv_end_color="#00EEFA"
        app:cpv_end_progress="100"
        app:cpv_isFilled="false"
        app:cpv_isTracked="true"
        app:cpv_progress_duration="2000"
        app:cpv_progress_textColor="#28AAFB"
        app:cpv_progress_textSize="18sp"
        app:cpv_progress_width="8dp"
        app:cpv_start_color="#0052a3"
        app:cpv_start_progress="0"
        android:visibility="gone"
        tools:visibility="visible"
        app:cpv_track_color="#22FFF5"
        app:cpv_track_width="4dp" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minLines="11"
        android:maxLines="15"
        android:background="@drawable/selector_lines_edit_view_bg"
        android:visibility="gone"
        android:gravity="top|start"
        android:padding="10dp"
        android:hint="请输入文字…"
        android:textColor="@color/colorTitle"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        tools:visibility="visible"/>


<!--    <com.huaxin.library.custom.LinesEditView-->
<!--        android:id="@+id/et_input"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="10dp"-->
<!--        android:visibility="gone"-->
<!--        app:classic_contentTextColor="@color/colorContent"-->
<!--        app:classic_maxCount="200" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_44"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_publish"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>
