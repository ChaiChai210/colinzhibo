<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_splash" />

    <com.qfxl.view.RoundProgressBar
        android:id="@+id/rpb_gg"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        app:rpb_autoStart="false"
        app:rpb_centerBackgroundColor="@color/colorTitle"
        app:rpb_centerText="10"
        app:rpb_centerTextColor="@color/text_color"
        app:rpb_countDownTimeInMillis="10000"
        app:rpb_sweepStrokeColor="@color/text_color"
        android:visibility="gone"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center"
        />
</FrameLayout>