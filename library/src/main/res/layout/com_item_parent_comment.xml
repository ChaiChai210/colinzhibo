<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_avatar"
        android:textColor="@color/video_item_bg"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded"
        tools:text="用户昵称" />


    <TextView
        android:id="@+id/tv_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_40"
        android:textColor="@color/colorContent"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        tools:text="评价具体内容" />
    <!--    <com.kproduce.roundcorners.RoundTextView-->
    <!--        android:id="@+id/tv_owner_liked"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="@dimen/dp_10"-->
    <!--        android:layout_toRightOf="@+id/iv_avatar"-->
    <!--        android:textColor="@color/video_item_bg"-->
    <!--        android:textSize="10sp"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/iv_avatar"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/tv_comment_detail"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        tools:ignore="RtlHardcoded"-->
    <!--        tools:text="作者赞过" />-->

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:drawableTop="@drawable/ic_like_normal"
        android:gravity="center"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:textColor="@color/colorTitle"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_comment_detail"
        app:layout_constraintTop_toTopOf="@id/tv_nickname" />

</androidx.constraintlayout.widget.ConstraintLayout>
