<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="301dp"
    android:layout_height="481dp"
    android:background="@drawable/main_bg_update"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/icon_update_delete" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_250"
        android:text="新版本V"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_290"
        android:layout_marginEnd="@dimen/dp_45"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/sp_12"
        tools:text="是否清理当前APP缓存dfsdfsdfs附加賽決定房價放假" />


    <LinearLayout
        android:id="@+id/ll_update"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="暂不更新"
            android:background="@drawable/shape_cancel_update" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="立即更新"
            android:textColor="@color/white"
            android:background="@drawable/shape_app_update" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_force_update"
        android:layout_width="@dimen/dp_200"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_17"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_force_update"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_submit"
            android:gravity="center"
            android:text="强制更新"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

</RelativeLayout>
