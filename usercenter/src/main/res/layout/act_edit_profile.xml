<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="@dimen/dp_18">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="头像"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_choose_avatar"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_9"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_choose_avater" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="昵称"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_19"
            android:hint="请输入昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="性别"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="@dimen/dp_138"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gender"
                android:button="@null"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="@dimen/dp_138"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/selector_gender"
                android:button="@null"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="手机号"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="@dimen/dp_290"
            android:layout_height="@dimen/dp_31"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/login_input_bg"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_31"
                android:gravity="center"
                android:text="@string/number_code"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_line"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_number"
                android:paddingStart="@dimen/dp_6"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                tools:text="18252525000" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:text="所在地"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_17"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_6"
            android:text="请选择城市"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:text="个性签名"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_personal_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_19"
            android:hint="个性签名，最多24字"
            android:maxEms="24"
            android:textColor="@color/white"
            android:textColorHint="#5A5767"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_90">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="@dimen/dp_230"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_38"
                android:background="@drawable/user_bg_submit"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>