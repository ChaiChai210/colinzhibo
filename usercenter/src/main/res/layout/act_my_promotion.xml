<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@drawable/user_bg_promotion">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_11"
                android:src="@drawable/btn_back_play" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="推广送好礼"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="520dp"
            android:text="扫描下载花心社区"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_105"
            android:layout_below="@+id/tv_scan"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@color/white" />

        <TextView
            android:id="@+id/tv_promotion_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_qrcode"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_6"
            android:text="您的推广码："
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_promotion_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_promotion_code_text"
            android:layout_marginStart="@dimen/dp_50"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_website_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_qrcode"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toEndOf="@+id/iv_qrcode"
            android:gravity="center_horizontal"
            android:text="使用前保存官网\n可在官网下载最新APP"
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_website_tip"
            android:layout_marginStart="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_toEndOf="@+id/iv_qrcode"
            android:text="官网地址"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_website_tip"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_toEndOf="@+id/iv_qrcode"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            tools:text="www.baidu.com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_promotion_code"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_promotion_btn_save"
                android:text="保存页面"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_toEndOf="@+id/btn_save"
                android:background="@drawable/user_promotion_btn_copy"
                android:text="复制推广链接"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>
