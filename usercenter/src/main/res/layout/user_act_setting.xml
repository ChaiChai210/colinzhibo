<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <com.huaxin.library.custom.SettingView
        android:id="@+id/sv_community_convention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_title="社区公约" />

    <com.huaxin.library.custom.SettingView
        android:id="@+id/sv_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_title="隐私政策"
        android:visibility="gone"/>

    <com.huaxin.library.custom.SettingView
        android:id="@+id/sv_service_and_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_title="服务和隐私条款" />

    <com.huaxin.library.custom.SettingView
        android:id="@+id/sv_anchor_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_title="主播协议" />

    <com.huaxin.library.custom.SettingView
        android:id="@+id/sv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_title="意见反馈" />

    <RelativeLayout
        android:id="@+id/cache_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            tools:text="66M" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:src="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_check_update"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查更新"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            tools:text="10.02.1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:src="@color/colorPrimaryDark" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/shape_user_btn_logout"
        android:layout_marginTop="8dp"
        android:text="退出登录"
        android:textColor="@color/colorContent"
        android:textSize="18sp" />
</LinearLayout>
