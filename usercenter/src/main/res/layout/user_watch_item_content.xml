<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/dp_10"
    android:orientation="vertical">

    <ImageView
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_118"
        android:layout_marginStart="4dp"
        android:src="@color/colorTitle" />

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_6"
        android:paddingStart="6dp" />

    <com.kproduce.roundcorners.RoundImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toEndOf="@+id/iv_choose"
        android:src="@drawable/user_video_place_holder"
        app:rRadius="@dimen/dp_9" />

    <com.kproduce.roundcorners.RoundTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_75"
        android:background="@color/text_color"
        app:rLeftRadius="50dp"
        app:rRightRadius="50dp"
        tools:text="12:25" />

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_avatar"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/sp_14"
        tools:text="账户余额" />

    <TextView
        android:id="@+id/tv_video_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_name"
        android:layout_alignStart="@+id/tv_video_name"
        android:layout_marginTop="@dimen/dp_9"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/colorContent"
        android:textSize="@dimen/sp_12"
        tools:text="内放水电费水电费\ndfsf\nf" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/pb_watch"
        android:textColor="@color/colorTitle"
        android:textSize="10sp"
        android:text="50%"/>


    <ProgressBar
        android:id="@+id/pb_watch"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_video_intro"
        android:layout_alignBottom="@+id/iv_avatar"
        android:progress="40"
        android:progressTint="@color/text_color" />
</RelativeLayout>
