<?xml version="1.0" encoding="utf-8"?>
<com.huaxin.library.custom.MaxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/video_item_bg"
    app:ml_ratio="0.87"
    app:ml_ratio_standard="w_h"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rvi_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:riv_corner_radius_top_left="@dimen/dp_7"
            app:riv_corner_radius_top_right="@dimen/dp_7" />

        <TextView
            android:id="@+id/tv_video_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="6dp"
            android:textColor="@color/colorTitle"
            android:textSize="11sp" />

    </LinearLayout>


</com.huaxin.library.custom.MaxLayout>