<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_46"
    android:layout_gravity="bottom"
    android:background="@color/video_item_bg"
    android:gravity="center"
    android:orientation="horizontal"
   >

    <EditText
        android:id="@+id/et_comment_content"
        android:theme="@style/AppTheme"
        android:layout_width="0dip"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:hint="@string/hint_send_comment"
        android:background="@drawable/comment_input_bg"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="12sp"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/child_tab_normal"
        android:textColorHint="@color/tab_normal" />

    <ImageButton
        android:id="@+id/iv_input_send"
        android:layout_width="@dimen/dp_46"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@mipmap/ic_send_comment"  />
</LinearLayout>