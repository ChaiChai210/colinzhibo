<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:srlEnableAutoLoadMore="false"
    app:srlEnableLoadMore="true"
    app:srlEnableRefresh="false"
    tools:ignore="MissingDefaultResource">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xuexiang.xui.widget.banner.recycler.BannerLayout
                android:id="@+id/bl_horizontal"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                app:bl_autoPlaying="true"
                app:bl_centerScale="1.2"
                app:bl_itemSpace="12dp"
                app:bl_moveSpeed="1.8"
                app:bl_showIndicator="false" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_7" />
            <com.xuexiang.xui.widget.statelayout.MultipleStatusView
                android:id="@+id/multiple_status_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msv_contentView="@layout/layout_content"
                android:layout_marginTop="@dimen/dp_10"
                />

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/recyclerView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:overScrollMode="never"-->
<!--                android:paddingLeft="@dimen/dp_3"-->
<!--                android:paddingRight="@dimen/dp_3">-->

<!--            </androidx.recyclerview.widget.RecyclerView>-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>
