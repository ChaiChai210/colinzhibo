<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp">

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:gravity="center_horizontal"
            android:text="全部1344条评论"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_delete1"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/video_tiktok_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/srl_common"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <com.lxj.xpopup.widget.VerticalRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <com.huaxin.library.custom.DYLoadingView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="#77C7A7"-->
    <!--        android:padding="15dp">-->

    <!--        <TextView-->
    <!--            android:id="@+id/tv_temp"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:background="#fff"-->
    <!--            android:padding="10dp"-->
    <!--            android:text="点我评论..."-->
    <!--            android:textColor="#333" />-->
    <!--    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_below="@+id/srl_common"
        android:background="@color/video_item_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="0dip"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_weight="1"
            android:background="@drawable/comment_input_bg"
            android:gravity="center_vertical|left"
            android:hint="@string/hint_send_comment"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/child_tab_normal"
            android:textColorHint="@color/tab_normal"
            android:textSize="12sp" />


        <ImageButton
            android:id="@+id/iv_send"
            android:layout_width="@dimen/dp_46"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/ic_send_comment" />
    </LinearLayout>

</LinearLayout>